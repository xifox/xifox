@import 'node_modules/nib'
@import 'deps/clean.styl'

/* component styles */
@import 'javascript/build/build.css'

/* absolut url srcs */
$host = "http://------definir.un.host-----/"

/* wrap dimmension */
$wrap_width = 960px

/* Layout */
$mainbar_height = 72px
$nav_hight = 120px

/* MOBILE Layout */
$mob_mainbar_height = 80px
$mob_nav_hight = 75px
$body_top = $mob_mainbar_height + $mob_nav_hight;
$body_content_port = 480 - $body_top

/* commons */
@import 'commons/colors.styl'
@import 'commons/fonts.styl'
@import 'commons/buttons.styl'

/* blocks */
@import 'footer.styl'
//@import 'header.styl'

*
  box-sizing: border-box
  *behavior: url( $host + 'css/boxsizing.htc')
  outline: none

body
  font-family: $main-font
  background-color:$grey-dark 
  color: white
  background-image: url('../images....../')
  background-repeat: no-repeat
  background-position: center $mainbar_height
  background-size: 100% 
  a
    color: $grey-light
    text-decoration: none
  h1
    color: #fff
    font-size: 20px
  p
    font-size: 12px
    color: $grey-light
  ul
    margin: 0 auto
    li
      width: 20%
      margin: 10px 5px
.clear
  clear:both
  width:100%
/*Layout*/
#wrapper
  width:100%
  left: 0
  min-height: 100%
  position: absolute
  top: 0
  .wrap
  #header
    width: $wrap_width
    margin: 0 auto
  .program-items
    ul.program-item
      float: left
      display: inline-block
      width: 160px
      li
        margin: 0px 1px
        overflow: hidden
        display: block
  #container
    background-color: $grey-dark
    #content
      float:left
      width: 100%
      overflow:hidden
      height: 1%
      .content
        padding: 0 0 0 270px
    #sidebar
      width: 247px
      float: left
      margin-left: -100%
      position: relative
  #footer
    margin:30px auto 0px
    position: relative
    z-index: 100
    height: 320px
    width: $wrap_width
  #site-info 
    .si-wrapper
      width: $wrap_width
      margin: 0 auto

